<div class="col-lg-10 col-md-10 col-sm-9 col-xs-12">



<div class="container">
    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-body">
                  <div class="col-lg-10 col-md-10 col-sm-9 col-xs-12">
                  <p id="notice"><%= notice %></p>
                  <h1>Clientes</h1>
                  <div class="table-responsive">
                  <table class="table table-striped">
                    <thead>
                      <tr class="bg-info">
                        <th>Nombre</th>
                        <th>Apellido paterno</th>
                        <th>Apellido materno</th>
                        <th>Rut</th>
                        <th colspan="3"></th>
                      </tr>
                    </thead>

                    <tbody>
                      <% @clientes.each do |cliente| %>
                        <tr>
                          <td><%= cliente.nombre %></td>
                          <td><%= cliente.apellido_paterno %></td>
                          <td><%= cliente.apellido_materno %></td>
                          <td><%= cliente.rut %></td>
                          <td><%= link_to 'Mostrar', cliente,class:'btn btn-primary' %></td>
                          <td><%= link_to 'Editar', edit_cliente_path(cliente),class:'btn btn-primary' %></td>
                          <td><%= link_to 'Eliminar', cliente, method: :delete, data: { confirm: 'Estas Seguro?' }, class:'btn btn-danger' %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
                  <br>
                  <%= link_to 'Agregar un cliente nuevo', new_cliente_path, class:'btn btn-primary' %>
            </div>
          </div>  
        </div>
      </div>
    </div>
  </div>
</div>