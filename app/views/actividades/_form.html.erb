<br>

<div class="col-xs-9">
    <div class="card">
      <div class="card-header">
        <h4 class="card-title" id="basic-layout-colored-form-control">Actividades</h4>
        <a class="heading-elements-toggle"><i class="icon-ellipsis font-medium-3"></i></a>
        <div class="heading-elements">
          <ul class="list-inline mb-0">
            <li><a data-action="collapse"><i class="icon-minus4"></i></a></li>
            <li><a data-action="reload"><i class="icon-reload"></i></a></li>
            <li><a data-action="expand"><i class="icon-expand2"></i></a></li>
            <li><a data-action="close"><i class="icon-cross2"></i></a></li>
          </ul>
        </div>
      </div>
      <div class="card-body collapse in">
        <div class="card-block">
          <div class="card-text">
          </div>   
                  <%= form_with(model: actividade, local: true) do |form| %>
                  <% if actividade.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(actividade.errors.count, "error") %> prohibited this actividade from being saved:</h2>

                      <ul>
                        <% actividade.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>
                  <div class="form-body">
                    <h4 class="form-section"><i class="icon-eye6"></i> Gestión de actividades</h4>
                    <div class="row">
                      <div class="col-md-6">
                        <div class="form-group">
                          <%= form.label :nombre %>
                          <%= form.text_field :nombre , class: 'form-control border-primary' , required:"true", placeholder:"Nombre Avtividad"%>
                        </div>
                        </div>
                          <div class="col-md-6">
                            <div class="form-group">
                              <%= form.label :descripcion %>
                              <%= form.text_field :descripcion, class: 'form-control border-primary' , required:"true", placeholder:"Descripción de actividad" %>
                            </div>
                            </div>
                            </div>
                            <div class="row">
                            <div class="col-md-6">
                              <div class="form-group">
                                <%= form.label :fecha %>
                                <%= form.text_field :fecha, html_options = {class: 'form-control border-primary datepicker',type:'date', placeholder: 'mm/dd/yyyy' }%>
                              </div>
                              </div>
                          <div class="col-md-6">
                            <div class="form-group">
                              <%= form.label :tipo_actividad %>
                              <%= form.text_field :tipo_actividad , class: 'form-control border-primary' , required:"true", placeholder:"Apellido Materno"%>
                            </div>
                            </div>
                            </div>

                        <div class="form-actions center">
                          <%= form.submit class:'btn btn-primary'%>
                          <%= link_to 'Volver', actividades_path, class:'btn btn-warning' %>

                        </div>
                      <% end %>
                </div>
            </div>
        </div>
      </div>
