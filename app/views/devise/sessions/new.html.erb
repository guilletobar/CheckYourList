
<body>
  <div class="container" >
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h1 class="card-title text-center">Login</h1>
            <hr>
              <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
              <div class="form-label-group">
                <label for="inputEmail">Cuenta Email</label>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'form-control', required:"true", placeholder:'example@gmail.com'%>
              </div>
              <hr>
              <div class="form-label-group">
                <label for="inputPassword">Contrase√±a</label>
                <%= f.password_field :password, autocomplete: "current-password", class: 'form-control', required:"true", placeholder:'*************' %>
              </div>
              <hr>
              <div class="custom-control custom-checkbox mb-3">
                <% if devise_mapping.rememberable? -%>
                  <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
                <% end -%>
              </div>
              <%= f.submit "Ingresar", class: 'btn btn-lg btn-primary btn-block text-uppercase' %>
              <h5><%= render "devise/shared/links" %><h5>
                <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
